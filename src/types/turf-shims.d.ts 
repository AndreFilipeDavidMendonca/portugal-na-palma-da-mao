// src/types/turf-shims.d.ts

// helpers — reexporta os tipos do subpath que de facto tem .d.ts
declare module "@turf/helpers" {
  export * from "@turf/helpers/dist/js/index";
  const _default: any; // não há default de tipos aqui; evita erro em imports default
  export default _default;
}

// boolean-point-in-polygon — reexporta tipos + default
declare module "@turf/boolean-point-in-polygon" {
  export * from "@turf/boolean-point-in-polygon/dist/js/index";
  // declara o default para o TS saber invocar como função
  const _default: (
    pt: any, // Point | Feature<Point>
    poly: any, // Feature<Polygon|MultiPolygon>
    options?: { ignoreBoundary?: boolean }
  ) => boolean;
  export default _default;
}